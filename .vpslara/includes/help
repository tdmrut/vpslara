#!/bin/bash

Color_Off="\033[0m"     # Text Reset
Yellow="\033[33m"       # Yellow

echo "${Yellow}Description:${Color_Off}"
echo "  VPSLara is a CLI for building Laravel ready servers on VPS"
echo ""

echo "${Yellow}Usage:${Color_Off}"
echo "  vpslara $arguments"
echo ""

echo "${Yellow}Arguments:${Color_Off}"
echo "  ${Yellow}setup${Color_Off}              Setup a new server with Nginx, PHP 7.2, and MySQL 5.7"
echo "  ${Yellow}setup php71${Color_Off}        Setup a new server with Nginx, PHP 7.1, and MySQL 5.7"
echo "  ${Yellow}host${Color_Off}               Create a new Nginx host"
echo "  ${Yellow}host \$1 \$2${Color_Off}         \$1=domain, \$2=folder_location (ex. vpslara host url.com /var/www/folder)"
echo "  ${Yellow}pass${Color_Off}               Display the vpslara user password"
echo "  ${Yellow}mysqlpass${Color_Off}.         Display the MySQL password"


#. /etc/.vpslara/includes/colors